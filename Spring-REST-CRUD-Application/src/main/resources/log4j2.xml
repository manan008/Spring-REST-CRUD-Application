<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<Configuration>
	<Appenders>
		<File name="LogFile" filename="D:/ApplicationLogs/SpringRESTCRUD/ApplicationLog.log" append="true">
			<PatternLayout pattern="%d{dd-mm-yyyy HH:mm:ss} %level %logger{36} - %msg%n" />
		</File>
	</Appenders>
	<Loggers>
		<Logger name="com.home" level="INFO" additivity="false">
